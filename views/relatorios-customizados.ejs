<%- include('partial/body-open') %>

    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header mdl-layout--fixed-drawer">
        
        <%- include('partial/header-nav') %> 

        <main class="mdl-layout__content">
            <div class="page-content">
                <div class="welcome-card">

                    <div class="mdl-card__supporting-text">
                        <div class="container mt-5">
                            <div class="mdl-card__title2">
                                <h2 class="mdl-card__title-text">Relatório Customizado</h2>
                            </div>
                        </div>
                    </div>

                    <div class="mdl-card__actions mdl-card--border">

                        

                        <div class="mdl-card__supporting-text">
                            <div class="container mt-5">
                                <div class="mdl-card__title2">
                                    <form id="buscarDizimistaForm" name="buscarDizimistaForm" action="/relatorio/customizado" method="get">
                                        <select id="period" name="period" class="mdl-textfield__input" aria-label="Default select example">
                                            <option value="ano" selected>Por ano</option>
                                            <option value="anomes">Por ano e mês</option>
                                          </select>
                                        <div class="inputBox">
                                            <input class="mdl-textfield__input" id="datePeriod" type="text" name="datePeriod" placeholder="Digite o ano ou ano e mês. Ex.: 2024, 2024-10">
                                        </div>
                                      </form>
                                </div>
                            </div>
                        </div>
                          <br>
                        <a onclick="javascript:subBuscarDizimistaFormForm()" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
                            Buscar &nbsp; <i class="fa-solid fa-magnifying-glass"></i>
                        </a>
                    </div>

                    <script>
                        function subBuscarDizimistaFormForm() {
                            document.getElementById("buscarDizimistaForm").submit();
                        }
                    </script>

                </div>
            </div>
        </main>
    </div>
    <%- include('partial/body-close') %>    